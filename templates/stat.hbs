<div class="kw-warfare-unit-stat-value">
	<label for="{{statName}}-stat" >
		{{#if stat.advantage}}<span title="{{localize 'KW_WARFARE.Advantage'}}" class="kw-warfare-stat-advantage">*</span>{{/if}}
		{{#if stat.disadvantage}}<span title="{{localize 'KW_WARFARE.Disadvantage'}}" class="kw-warfare-stat-disadvantage">-</span>{{/if}}
		<span class="kw-warfare-unit-stat-display {{#if rollable}}kw-warfare-rollable{{/if}}"
		{{#if rollable}}data-kw-roll="{{statName}}"{{/if}}>
			{{kw-number-format stat.value sign=rollable decimals=0}}
		</span>
		{{#if (gt stat.bonus 0)}}
			<span class="kw-warfare-stat-bonus {{#if (lt stat.bonus 0)}}kw-warfare-stat-bonus-negative{{/if}}" title="{{localize 'KW_WARFARE.Bonus'}}">
				({{kw-number-format stat.bonus sign=true decimals=0}})
			</span>
		{{/if}}
		{{#if (lt stat.bonus 0)}}
			<span class="kw-warfare-stat-bonus {{#if (lt stat.bonus 0)}}kw-warfare-stat-bonus-negative{{/if}}" title="{{localize 'KW_WARFARE.Bonus'}}">
				({{kw-number-format stat.bonus sign=true decimals=0}})
			</span>
		{{/if}}
	</label>
	<input id="{{statName}}-stat" type="number" class="kw-warfare-unit-stat"
		   data-dtype="Number" placeholder="&mdash;"
		   name="flags.kw-warfare.unit.stats.{{statName}}.value" value="{{stat.value}}" />
</div>
